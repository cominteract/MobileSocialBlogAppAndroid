<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_feed"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:layout_width="42dp" android:layout_height="42dp"
        android:id="@+id/iv_discover_icon" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView android:id="@+id/tv_discover_username"
        android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" app:layout_constraintLeft_toRightOf="@id/iv_discover_icon" />


    <Button android:id="@+id/btn_discover_remove" app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content" app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" android:text="Remove" />


    <Button android:id="@+id/btn_discover_addfriend" app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content" app:layout_constraintRight_toLeftOf="@id/btn_discover_remove"
        android:layout_height="wrap_content" android:text="Add Friend" />



    <TextView android:id="@+id/tv_discover_location" app:layout_constraintTop_toBottomOf="@id/iv_discover_icon"
        android:layout_width="wrap_content" app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content" />
  

</androidx.constraintlayout.widget.ConstraintLayout>