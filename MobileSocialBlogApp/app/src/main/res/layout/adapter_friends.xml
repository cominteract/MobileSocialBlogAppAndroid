<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/padding_feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:layout_width="48dp" android:layout_height="48dp"
        android:id="@+id/iv_friends_icon" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView android:id="@+id/tv_friends_username" android:textSize="@dimen/usertext_size"
        android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" app:layout_constraintLeft_toRightOf="@id/iv_friends_icon" />


    <Button android:id="@+id/btn_friends_online" app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content" app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" android:text="Online" />






    <TextView android:id="@+id/tv_friends_location" app:layout_constraintTop_toBottomOf="@id/tv_friends_username"
        android:layout_width="wrap_content" app:layout_constraintLeft_toRightOf="@id/iv_friends_icon" android:textSize="@dimen/commenttext_size"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>