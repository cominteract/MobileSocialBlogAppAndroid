<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".ui.optionalsignup.OptionalSignupFragment">

    <EditText
        android:layout_margin="@dimen/padding_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_optional_birthday" />
    <EditText
        android:layout_margin="@dimen/padding_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_optional_location" />
    <ImageView
        android:layout_margin="@dimen/padding_feed"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_optional_photo" />
    <Button
        android:layout_margin="@dimen/padding_feed"
        android:text="Browse"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_optional_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="@dimen/padding_feed"
        android:text="Upload"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_optional_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>