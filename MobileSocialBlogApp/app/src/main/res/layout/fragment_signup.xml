<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.signup.SignupFragment">

    <!-- TODO: Update new fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="@dimen/padding_feed"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_login_username"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:hint="Username"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_login_password"
            android:layout_weight=".5"
            android:hint="Password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:layout_margin="@dimen/padding_mini"
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="@dimen/padding_feed"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_signup_username"
            android:hint="Username"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_signup_password"
            android:hint="Password here"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <EditText
        android:id="@+id/et_signup_firstname"
        android:layout_margin="@dimen/padding_mini"
        android:hint="Firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_signup_lastname"
        android:layout_margin="@dimen/padding_mini"
        android:hint="Lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="@dimen/padding_feed"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_signup_confirmpassword"
            android:hint="Confirm Password"
            android:layout_weight=".6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_gravity="center_horizontal"
            android:text="Sign Up"
            android:id="@+id/btn_signup"
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>