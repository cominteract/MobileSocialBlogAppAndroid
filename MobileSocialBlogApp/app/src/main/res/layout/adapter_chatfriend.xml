<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_feed"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:layout_width="48dp" android:layout_height="48dp"
        android:id="@+id/iv_chatfriend_icon" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/tv_chatfriend_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/usertext_size"
        app:layout_constraintLeft_toRightOf="@id/iv_chatfriend_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button android:id="@+id/btn_chatfriend_online" app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content" app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" android:text="Online" />






    <TextView android:id="@+id/tv_chatfriend_text" app:layout_constraintLeft_toRightOf="@id/iv_chatfriend_icon"
        android:layout_width="wrap_content" android:textSize="@dimen/commenttext_size" app:layout_constraintTop_toBottomOf="@id/tv_chatfriend_username"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/tv_chatfriend_timestamp" app:layout_constraintTop_toBottomOf="@id/tv_chatfriend_text"
        android:layout_width="wrap_content" app:layout_constraintRight_toRightOf="parent" android:textSize="@dimen/commenttext_size"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>